{
  "name": "humildasleague",
  "version": "1.1.0",
  "description": "Automatização de tarefas para o League of Legends",
  "main": "./dist/packages/main/index.js",
  "author": "Humildeficador",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k -n electron,main,vite -c blue,cyan,magenta \"wait-on http://localhost:5173/ && electronmon .\" \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc --watch",
    "dev:renderer": "vite ./packages/renderer --host  --config packages/renderer/vite.config.ts",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "electron-forge start",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc",
    "build:renderer": "vite build ./packages/renderer --config packages/renderer/vite.config.ts",
    "forge:start": "electron-forge start",
    "forge:package": "electron-forge package",
    "forge:make": "electron-forge make",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/plugin-fuses": "^7.8.2",
    "@electron/fuses": "^1.8.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electronmon": "^2.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-squirrel-startup": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "league-connect": "^6.0.0-rc13"
  }
}
